
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Showing results for: @ViewBag.SearchTerm</h2>

@foreach (var article in ViewBag.Results)
{
    <h4>@Html.ActionLink(article.Title as String, "Detail", "News", new { id = article.ArticleId})</h4>
    <p>article.Content</p>
}

